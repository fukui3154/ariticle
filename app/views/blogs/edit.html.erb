<h1>記事を編集する</h1>
<%= form_for @blog, url: blog_path, method: :patch do |f| %>
  <p>
    <%= f.label :title, "記事のタイトル" %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text, "記事の内容" %><br>
    <%= f.text_area :text, cols: 60, rows: 8 %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
