<h1>全ての投稿一覧</h1>
<%= form_for :blog,data: { remote: true }, url: blogs_path do |f| %>
  <p>
    <%= f.label :title, "記事のタイトル" %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text, "記事の内容" %><br>
    <%= f.text_area :text, cols: 60, rows: 8 %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= flash[:notice] %>
<div id="blogs">
  <%= render 'table' %>
</div>
