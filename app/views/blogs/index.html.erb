<h1>全ての投稿一覧</h1>
<!-- method get を指定しないと　　method post を勝手に指定してしまう　 -->
<%= form_tag('/blogs', :remote => true, method: :get) do %>
<!-- trueだとajax falseだとajaxにならない -->
  <%= text_field_tag :title %>
  <%= submit_tag "タイトルを変更する" %>
<% end %>

<h1>新しい記事を投稿</h1>
<%= form_for :blog,data: { remote: true }, url: blogs_path do |f| %>

  <p>
    <%= f.label :title, "記事のタイトル" %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text, "記事の内容" %><br>
    <%= f.text_area :text, cols: 60, rows: 8 %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>
  <%= flash[:notice] %>
  <div id="blogs">
    <%= render @blogs %>
  </div>
</table>
